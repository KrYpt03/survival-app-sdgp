{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,   
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "types": ["@expo/vector-icons", "jest", "node"]
  },
  "include": ["src/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}