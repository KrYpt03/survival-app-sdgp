{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,   
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["src/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
