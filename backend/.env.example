# Database Configuration
DATABASE_URL="your_database_url_here"
# If using Neon:
# DATABASE_URL="postgresql://neondb_owner:your_password@ep-example-project.region.aws.neon.tech/neondb?sslmode=require"

# Authentication (Clerk)
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_JWT_KEY=your_clerk_jwt_key
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret

# Server Configuration
PORT=5000
NODE_ENV=development

# Geofencing Configuration
DEFAULT_GEOFENCE_RANGE=100 # in meters

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
# SENTRY_DSN="https://your-sentry-dsn.ingest.sentry.io/project-id"

# Caching
CACHE_TTL=300 # in seconds 

# Admin API Configuration
ADMIN_API_KEY=your_admin_api_key_at_least_32_chars

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# API Configuration
API_VERSION=v1

# Logging
LOG_LEVEL=debug 